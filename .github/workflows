name: CI/CD for RemixJS Project

on:
  push:
    branches: [main] # Triển khai khi có push lên nhánh main
  pull_request:
    branches: [main]

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest

    steps:
      # Bước 1: Checkout code
      - name: Checkout code
        uses: actions/checkout@v3

      # Bước 2: Thiết lập Node.js
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "18" # RemixJS thường tương thích tốt với Node.js 18

      # Bước 3: Cài đặt dependencies
      - name: Install dependencies
        run: npm install

      # Bước 4: Chạy test
      - name: Run tests
        run: npm test

      # Bước 5: Build ứng dụng
      - name: Build Remix App
        run: npm run build

      # Bước 6: Triển khai (tùy chọn)
      # Thêm các bước triển khai tùy thuộc vào nền tảng của bạn
      # Ví dụ: deploy lên Vercel, Netlify, hoặc một server Ubuntu với SSH

      # Triển khai lên server Ubuntu qua SSH (ví dụ)
      - name: Deploy to Ubuntu Server
        env:
          SSH_PRIVATE_KEY: ${{ secrets.SSH_PRIVATE_KEY }}
          HOST: ${{ secrets.SERVER_HOST }}
          USER: ${{ secrets.SERVER_USER }}
        run: |
          mkdir -p ~/.ssh
          echo "$SSH_PRIVATE_KEY" > ~/.ssh/id_rsa
          chmod 600 ~/.ssh/id_rsa
          ssh -o StrictHostKeyChecking=no $USER@$HOST "mkdir -p ~/your_project_directory && cd ~/your_project_directory && git pull && npm install && npm run build && pm2 restart all"
